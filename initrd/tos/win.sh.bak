#! /bin/bash

tlog(){
    /tos/tlog -m "$1"
}

check(){
    if [ $? -eq 0 ]; then
        tlog "done"
    else
        tlog "fail"
        exit 1
    fi
}

OSNAME=Unknown

get_osname() {
	# depend installmethod
	method=$1
	# find OS name in /proc/cmdline
	
	c=$(cat /proc/cmdline); 
	on1=${c##*osname=};
	OSNAME=${on1%% *};
	
	if [ -z "$OSNAME" ]; then
		echo "osname is empty on /proc/cmdline, please check"
		exit 1
	fi

}

get_osname
part1="${OSNAME}.part1"
if [ -d /sys/firmware/efi ]; then
	gpt="${OSNAME}.gpt"
	part2="${OSNAME}.part2"
	if [[ ${OSNAME} =~ "2008" ]]; then
          part3="${OSNAME}.part3.gz"
	else
          part3="${OSNAME}.part3"
	  part4="${OSNAME}.part4.gz"
	fi
else
	mbr="${OSNAME}.mbr"
	part2="${OSNAME}.part2.gz"
fi

for t in $(cat /proc/cmdline); do
    case $t in
        installmethod=net)
                        echo "Downloading image"
                        /tos/tlog -m "Downloading image"

			if [ -d /sys/firmware/efi ]; then
                        	wget http://192.168.199.200:8444/img/$gpt -P /data
                        	wget http://192.168.199.200:8444/img/$part1 -P /data
                        	wget http://192.168.199.200:8444/img/$part2 -P /data
                        	wget http://192.168.199.200:8444/img/$part3 -P /data
				if [[ ${OSNAME} =~ 2012 ]]; then
				  wget http://192.168.199.200:8444/img/$part4 -P /data
				fi
			else

                        	wget http://192.168.199.200:8444/img/$mbr -P /data
                        	wget http://192.168.199.200:8444/img/$part1 -P /data
                        	wget http://192.168.199.200:8444/img/$part2 -P /data

			fi

                        if [ $? -eq 0 ]; then
                                /tos/tlog -m "Image download finished"
                        else
                                /tos/tlog -m "Image download failed"
                                exit 1
                        fi
            break
            ;;
        installmethod=cdrom)
            echo "mount /dev/cdrom to /data"
            sleep 10
                        mount /dev/cdrom /data
            break;
            ;;
        installmethod=usb)
            echo "usb"
            break;
            ;;
    esac
done

if [ -d /sys/firmware/efi ]; then
        tlog "recovery gpt"
	dd if=/dev/zero of=/dev/sda bs=1M count=1
        dd if=/data/$gpt of=/dev/sda
	sgdisk -e /dev/sda
else
	tlog "recovery mbr"
	dd if=/data/$mbr of=/dev/sda bs=1M count=1
fi

umount -l /dev/sda{1..4}

partprobe /dev/sda 
check

if [ -d /sys/firmware/efi ]; then
	tlog "recovery partition 1"
	dd if=/data/$part1 of=/dev/sda1
	check
	tlog "recovery partition 2"
	dd if=/data/$part2 of=/dev/sda2
	check
	tlog "recovery partition 3"
	if [[ ${OSNAME} =~ 2008 ]]; then 
	  gunzip -c /data/$part3 | ntfsclone -r -O /dev/sda3 -
       	  check
	else
	  dd if=/data/$part3 of=/dev/sda3
	  check
	  tlog "recovery partition 4"
	  gunzip -c /data/$part4 | ntfsclone -r -O /dev/sda4 -
	  check
	fi
else
	tlog "recovery partition 1"
	ntfsclone -r -O /dev/sda1 /data/$part1
	check
	tlog "recovery partition 2"
	gunzip -c /data/$part2 | ntfsclone -r -O /dev/sda2 -
	check
fi

sleep 1
tlog "umount /data"
umount /data

sleep 1
# make partition  if there is enough space left
#size=$(parted /dev/sda p | grep /dev/sda: | cut -d ' ' -f 3)
size=$(parted /dev/sda print | grep /dev/sda: | cut -d ' ' -f 3 | cut -d 'G' -f 1)
if [ $(echo "$size>80" | bc) -eq 1 ]; then
    if [ -d /sys/firmware/efi ]; then

          tlog "EFI"          
    else
          tlog "MBR"          
    fi
fi

tlog "all done"
